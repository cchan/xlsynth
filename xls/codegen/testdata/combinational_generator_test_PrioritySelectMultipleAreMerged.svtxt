module main(
  input wire [1:0] p,
  input wire [15:0] x,
  input wire [15:0] y,
  output wire [15:0] out
);
  function automatic [15:0] priority_sel_16b_2way (input reg [1:0] sel, input reg [15:0] case0, input reg [15:0] case1);
    begin
      unique casez (sel)
        2'b?1: begin
          priority_sel_16b_2way = case0;
        end
        2'b10: begin
          priority_sel_16b_2way = case1;
        end
        2'b00: begin
          priority_sel_16b_2way = '0;
        end
        default: begin
          // Propagate X
          priority_sel_16b_2way = 'X;
        end
      endcase
    end
  endfunction
  wire [15:0] add_12;
  assign add_12 = priority_sel_16b_2way(p, x, y) + priority_sel_16b_2way(p, y, x);
  assign out = add_12;
endmodule
